<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.salesledger.RepairRegisterController"
          hgap="10" vgap="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- 1단계: 고객 확인 -->
    <Label text="이름:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="오토바이 번호:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="bikeNumberField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="고객 확인" onAction="#onCheckCustomer" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- 수리 등록 (처음엔 숨김 처리) -->
    <Label fx:id="mileageLabel" text="주행 거리:" GridPane.rowIndex="3" GridPane.columnIndex="0" visible="false"/>
    <TextField fx:id="mileageField" GridPane.rowIndex="3" GridPane.columnIndex="1" visible="false"/>

    <Label fx:id="descLabel" text="수리 내역:" GridPane.rowIndex="4" GridPane.columnIndex="0" visible="false"/>
    <TextField fx:id="descField" GridPane.rowIndex="4" GridPane.columnIndex="1" visible="false"/>

    <Label fx:id="costLabel" text="수리 금액:" GridPane.rowIndex="5" GridPane.columnIndex="0" visible="false"/>
    <TextField fx:id="costField" GridPane.rowIndex="5" GridPane.columnIndex="1" visible="false"/>

    <Button fx:id="registerButton" text="수리 등록"
            onAction="#onRegister"
            GridPane.rowIndex="6" GridPane.columnIndex="1"
            visible="false"/>
</GridPane>
