<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.salesledger.RepairRegisterController"
          hgap="10" vgap="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- 1단계: 고객 확인 -->
    <Label text="이름:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="전화번호 뒷자리:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="고객 확인" onAction="#onCheckCustomer" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- 추가 : 오토바이 선택 토글 -->
    <VBox fx:id="bikeToggleContainer"
          GridPane.rowIndex="3" GridPane.columnIndex="1"
          spacing="5"
          visible="false" managed="false"/>

    <!-- 수리 등록 (처음엔 숨김 처리) -->
    <Label fx:id="mileageLabel" text="주행 거리:" GridPane.rowIndex="4" GridPane.columnIndex="0"
           visible="false" managed="false"/>
    <TextField fx:id="mileageField" GridPane.rowIndex="4" GridPane.columnIndex="1"
               visible="false" managed="false" prefWidth="200"/>

    <Label fx:id="descLabel" text="수리 내역:" GridPane.rowIndex="5" GridPane.columnIndex="0"
           visible="false" managed="false"/>
    <TextArea fx:id="descField" GridPane.rowIndex="5" GridPane.columnIndex="1"
              visible="false" managed="false" prefRowCount="4" wrapText="true" prefWidth="200"/>

    <Label fx:id="costLabel" text="수리 금액:" GridPane.rowIndex="6" GridPane.columnIndex="0"
           visible="false" managed="false"/>
    <TextField fx:id="costField" GridPane.rowIndex="6" GridPane.columnIndex="1"
               visible="false" managed="false" prefWidth="200"/>

    <Button fx:id="registerButton" text="수리 등록"
            onAction="#onRegister"
            GridPane.rowIndex="7" GridPane.columnIndex="1"
            visible="false" managed="false"/>
</GridPane>
