<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.salesledger.RepairRecordController">

    <top>
        <HBox spacing="10" style="-fx-padding: 12;">
            <Button text="← 뒤로가기" onAction="#onBackClicked"/>
            <Label text="이름 :" style="-fx-font-weight: bold;"/>
            <Label fx:id="nameLabel"/>
            <Label text="|" />
            <Label text="번호 :" style="-fx-font-weight: bold;"/>
            <Label fx:id="phoneLabel"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="repairTable" prefHeight="520">
            <columns>
                <TableColumn fx:id="colIndex" text="index" prefWidth="50"/>
                <TableColumn fx:id="colBikeNumber" text="수리 오토바이 번호" prefWidth="110"/>
                <TableColumn fx:id="colContent" text="수리 내역" prefWidth="200"/>
                <TableColumn fx:id="colMileage" text="주행 거리" prefWidth="100"/>
                <TableColumn fx:id="colCost" text="수리 금액" prefWidth="100"/>
                <TableColumn fx:id="colRepairDate" text="수리 날짜" prefWidth="100"/> <!-- 날짜 컬럼 -->
                <TableColumn fx:id="colActions" text="작업" prefWidth="160"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
