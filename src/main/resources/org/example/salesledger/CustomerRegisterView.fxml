<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.salesledger.CustomerRegisterController"
          hgap="10" vgap="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="이름:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="전화번호:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="오토바이 번호:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="bikeNumberField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="오토바이 기종:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="bikeModelField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="1">
        <Button text="등록" onAction="#onRegisterClicked"/>
        <Button text="취소" onAction="#onCancelClicked"/>
    </HBox>
</GridPane>
